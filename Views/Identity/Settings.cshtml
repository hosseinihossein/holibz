        padding: 10px 0;
    }

    #card7724cc1dd56c415ba1884d5626e55d9e .profile-info .buttons-container button {
        border: 1px solid lightgray;
        border-radius: 30px;
        background-color: rgba(0, 0, 0, 0);
        padding: 15px 30px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        color: rgb(50, 50, 50);
    }

    #card7724cc1dd56c415ba1884d5626e55d9e .profile-info .buttons-container button:hover {
        border-color: gray;
        color: black;
    }

    #card7724cc1dd56c415ba1884d5626e55d9e .showcase-div {
        width: 45%;
        height: 100%;
        float: right;
        overflow: hidden;
        text-align: center;
    }

    #card7724cc1dd56c415ba1884d5626e55d9e .showcase-div img {
        object-fit: cover;
        width: 100%;
        height: 100%;
        max-height: 80vh;
        border-radius: 20px;
    }

    #card7724cc1dd56c415ba1884d5626e55d9e .change-btn {
        border: 1px solid blue;
